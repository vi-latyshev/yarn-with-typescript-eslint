{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "baseUrl": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "typeRoots": [
            "node_modules/@types",
            "src/@types",
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
    ],
    "include": [
        ".eslintrc.js",
        "src/**/*.ts",
        "src/**/*.js",
    ]
}
